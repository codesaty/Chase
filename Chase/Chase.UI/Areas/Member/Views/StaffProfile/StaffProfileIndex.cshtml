@model Chase.Entities.DTOs.AppUserListDto

@{
    Layout = "~/Areas/Member/Views/Shared/_MemberLayout.cshtml";
}

<div class="container py-5">
    <div class="row">
        <div class="col-md-12">
            <small class="display-4">Personel Profili</small>
            <hr class="border-dark">
                <input type="hidden" asp-for="@Model.Id">
                <div class="form-group">
                    <label>Adınız</label>
                    <input type="text" asp-for="@Model.Name" class="form-control">
                </div>
                <div class="form-group">
                    <label>Soyadınız</label>
                    <input type="text" asp-for="@Model.SurName" class="form-control">
                </div>
                <div class="form-group">
                    <label>E-Mail Adresiniz</label>
                    <input type="email" asp-for="@Model.Email" class="form-control">
                </div>
            

        </div>
    </div>
</div>